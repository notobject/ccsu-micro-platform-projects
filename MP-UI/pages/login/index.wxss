/*  */
.lg-bg {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
}

/* logo块 */
.lg-header {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    height: 535rpx;
    background-color: #54C7Fc;
}

/* 主体 */
.lg-form {
    position: absolute;
    top: 535rpx;
    right: 0;
    bottom: 0;
    left: 0;
    padding-top: 100rpx;
    background-color: #f3f3f4;
}

/* 用户输入 */
.lg-input-box {
    width: 100%;
    height: 100rpx;
    padding-right: 80rpx;
    padding-left: 80rpx;
    margin-bottom: 60rpx;
    box-sizing: border-box;
}
.lg-input {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 16rpx;
    border: 1px solid #54C7Fc;
    border-radius: 12rpx;
    box-sizing: border-box;
}

/* 登录按钮 */
.lg-form .lg-form-submit {
    position: absolute;
    right: 0;
    bottom: 200rpx;
    left: 0;
    padding-right: 40rpx;
    padding-left: 40rpx;
}
.lg-form .lg-form-submit .lg-btn {
    font-size: 36rpx;
    background-color: #54C7Fc;
    color: #fff;
    transition: all .2s;
}
.lg-form-submit .lg-btn.lg-button-hover {
    background-color: #41A4C3;
    color: rgba(255, 255, 255, 0.6);
}
